{
    "description": "Changes input for Duolingo without need of switching keyboard layouts.",
    "manifest_version": 2,
    "name": "DuoKB",
    "version": "0.1",
    "homepage_url": "https://github.com/cdberkstresser/DuoKB",
    "icons": {
        "16": "icons/reader-16.png",
        "32": "icons/reader-32.png",
        "48": "icons/reader-48.png",
        "64": "icons/reader-64.png",
        "96": "icons/reader-96.png",
        "128": "icons/reader-128.png"
    },

    "browser_action": {
        "default_icon": "icons/reader-128.png",
        "default_title": "DuoKB"
    },
    "content_scripts": [{
        "matches": [
            "https://*.duolingo.com/*"
        ],
        "js": [
            "duokb.js",
            "translations.js"
        ]
    }]
}